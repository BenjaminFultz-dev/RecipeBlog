<% if (user != '') { %>
<h1>Welcome, <%= user.name %></h1>
<% } %>

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Favorite Recipes</h2>
        <a href="/favorite-recipes" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if (typeof favorites !== 'undefined' && favorites.length > 0) { %>
            <% favorites.forEach(function(recipe, index){ %>
            <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" Loading="lazy">
                </div>
                <div class="pt-1"><%= recipe.name %></div>
            </a>
            <% }) %>
            <% } else { %>
                <p>No items found.</p>
        <% } %>
    </div>
</section>

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Submitted Recipes</h2>
        <a href="/submitted-recipes" class="ms-auto">View More</a>
    </div>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if (typeof submittedRecipes !== 'undefined' && submittedRecipes.length > 0) { %>
            <% submittedRecipes.forEach(function(recipe, index){ %>
            <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" Loading="lazy">
                </div>
                <div class="pt-1"><%= recipe.name %></div>
            </a>
            <% }) %>
            <% } else { %>
                <p>No items found.</p>
        <% } %>
    </div>
</section>